{
    "name": "demo-web-shop-playwright-e2e",
    "version": "1.0.0",
    "description": "Playwright automation testing framework for an e-commerce website.",
    "main": "index.js",
    "scripts": {
        "test:smoke": "npx playwright test --grep \"@smoke\" --headed --project=chromium",
        "test": "playwright test",
        "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
        "allure:open": "allure open ./allure-report",
        "test:allure": "npm-run-all --continue-on-error test allure:generate allure:open"
    },
    "keywords": [],
    "author": "Yordan Popov",
    "license": "ISC",
    "devDependencies": {
        "@faker-js/faker": "^10.1.0",
        "@playwright/test": "^1.57.0",
        "@types/node": "^25.0.3",
        "allure-playwright": "^3.4.4",
        "npm-run-all": "^4.1.5"
    }
}
